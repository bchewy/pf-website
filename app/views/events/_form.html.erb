<!--Form for event, listing all the different parts-->
<div class="container">
  <%= form_for @event, html: {multipart: true} do |f| %>
    <div class="form-group">
      <%= f.label :eventName %>
      <%= f.text_field :eventName, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :eventNoOfPpl %>
      <%= f.text_field :eventNoOfPpl, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :eventAdminEmail %>
      <%= f.text_field :eventAdminEmail, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :eventNoTeams %>
      <%= f.text_field :eventNoTeams, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :event_banner %>
      <%= f.file_field :event_banner %>
    </div>
    <div class="form-group">
      <%= f.label :gameStatus %>
      <%= f.select :gameStatus, ['Waiting', 'Ready', 'Not sorted'] %>
    </div>
    <!--Multiple images for the games!-->
    <!--    <div class="form-group">-->
    <%#= f.label :event_pics %>
    <%#= f.file_field :event_pics, multiple: true %>
    <!--    </div>-->
    <%= f.submit "Save", class: "btn btn-primary btn-block" %>
  <% end %>
</div>